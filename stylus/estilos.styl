@import "normalize.styl" 
@import "fonts.styl"
gris_oscuro = #333333
gris_claro 	= #818181
rojo 		= #BD255B
a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px //es el tamanio de fuente mas legible
	//em al padre mas cercano de fuente en pixeles
figure //tiene estilo por defecto de margenes
	margin 0 //quitamos los magenes para apilar elementos
img
	vertical-align top
//buttons
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
//oocss classes
.container
	font-size 0
	padding 1.4rem
	text-align center
.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child //quitamos margen al ultimo elemento 
		margin-right 0
	&.gray
		color gris_claro
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black,.3)
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro
.menu
	display none 
.relative
	position relative
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.padding
	padding 1em
.padding-tb
	padding 1em 0
.progress
	margin 1em 0
	position relative
	.min 
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		border-radius 5px
		height 5px
		background rojo
		width 30%
		position relative
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		width 10px
		position absolute
		right 0
		top -2px
.header
	height 3.5em
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.song
	display inline-block //tiene propiedades de bloque para que no se desborde y propiedad de interletrado para texto
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	width 8rem
	text-align left
	&:nth-child(even) //pseudoclase css nth-child busca a los hijos que nosotros agregamos en el parametro, even busca pares de song	
		margin-right 0
	p
		margin .5em 0

.playing
	&.small
		width 20em